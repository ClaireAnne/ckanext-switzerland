{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "An implementation of the DCAT-AP Switzerland Schema",
  "about_url": "https://github.com/ogdch/ckanext-switzerland",
  "form_languages": ["de", "fr", "it", "en"],
  "dataset_fields": [
    {
      "field_name": "identifier",
      "label": "Identifier",
      "validators": "scheming_required"
    },
    {
      "field_name": "display_name",
      "label": "Display name",
      "preset": "multilingual_output"
    },
    {
      "field_name": "title",
      "label": "Title",
      "preset": "multilingual_text",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "Slug",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "description",
      "label": "Description",
      "preset": "multilingual_text"
    },
    {
      "field_name": "issued",
      "label": "Issued date",
      "preset": "ogdch_date"
    },
    {
      "field_name": "modified",
      "label": "Modified date",
      "preset": "ogdch_date"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "publishers",
      "label": "Publisher(s)",
      "preset": "dicts",
      "display_snippet": "publishers.html"
    },
    {
      "field_name": "contact_points",
      "label": "Contact point(s)",
      "preset": "dicts",
      "display_snippet": "contact_points.html"
    },
    {
      "field_name": "language",
      "label": "Languages",
      "preset": "ogdch_multiple_checkbox",
      "choices": [
        {"value": "de", "label": "Deutsch"},
        {"value": "fr", "label": "Français"},
        {"value": "it", "label": "Italiano"},
        {"value": "en", "label": "English"}
      ]
    },
    {
      "field_name": "relations",
      "label": "Relation(s)",
      "preset": "dicts",
      "display_snippet": "relations.html"
    },
    {
      "field_name": "tag_string",
      "label": "Keyswords",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "url",
      "label": "Landing page",
      "preset": "url"
    },
    {
      "field_name": "spatial",
      "label": "Spatial"
    },
    {
      "field_name": "coverage",
      "label": "Coverage"
    },
    {
      "field_name": "temporals",
      "label": "Temporal(s)",
      "preset": "dicts",
      "display_snippet": "temporals.html"
    },
    {
      "field_name": "accrual_periodicity",
      "label": "Periodicity",
      "display_snippet": "periodicity.html"
    },
    {
      "field_name": "see_alsos",
      "label": "See also(s)",
      "preset": "dicts"
    }
  ],
  "resource_fields": [
    {
      "field_name": "identifier",
      "label": "Identifier"
    },
    {
      "field_name": "title",
      "label": "Title",
      "preset": "multilingual_text",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "description",
      "label": "Description",
      "preset": "multilingual_text"
    },
    {
      "field_name": "issued",
      "label": "Issued date",
      "required": true,
      "preset": "ogdch_date"
    },
    {
      "field_name": "modified",
      "label": "Modified date",
      "preset": "ogdch_date"
    },
    {
      "field_name": "language",
      "label": "Language",
      "preset": "ogdch_multiple_checkbox",
      "choices": [
        {"value": "de", "label": "Deutsch"},
        {"value": "fr", "label": "Français"},
        {"value": "it", "label": "Italiano"},
        {"value": "en", "label": "English"}
      ]
    },
    {
      "field_name": "url",
      "label": "Access URL",
      "preset": "url",
      "validators": "scheming_required"
    },
    {
      "field_name": "download_url",
      "label": "Download URL",
      "preset": "url"
    },
    {
      "field_name": "rights",
      "label": "Rights"
    },
    {
      "field_name": "license",
      "label": "License"
    },
    {
      "field_name": "byte_size",
      "label": "Byte Size",
      "preset": "file_size"
    },
    {
      "field_name": "media_type",
      "label": "Media Type"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "coverage",
      "label": "Coverage"
    }
  ]
}
