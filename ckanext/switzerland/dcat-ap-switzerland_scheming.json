{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "An implementation of the DCAT-AP Switzerland Schema",
  "about_url": "https://github.com/ogdch/ckanext-switzerland",
  "form_languages": ["de", "fr", "it", "en"],
  "dataset_fields": [
    {
      "field_name": "identifier",
      "label": "Identifier"
    },
    {
      "field_name": "title",
      "label": "Title",
      "preset": "fluent_text",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "Slug",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "preset": "fluent_text"
    },
    {
      "field_name": "issued",
      "label": "Issued date",
      "preset": "date"
    },
    {
      "field_name": "modified",
      "label": "Modified date",
      "preset": "date"
    },
    {
      "field_name": "owner_org",
      "label": "Publisher",
